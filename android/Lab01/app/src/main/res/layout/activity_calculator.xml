<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4">

            <Button
                android:id="@+id/c"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="0" />

            <Button
                android:id="@+id/wrap"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="()"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="0" />

            <Button
                android:id="@+id/per"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_row="0" />

            <Button
                android:id="@+id/div"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="3"
                app:layout_row="0" />

            <Button
                android:id="@+id/num_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="1" />

            <Button
                android:id="@+id/num_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/num_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_row="1" />

            <Button
                android:id="@+id/mul"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="3"
                app:layout_row="1" />

            <Button
                android:id="@+id/num_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="2" />

            <Button
                android:id="@+id/num_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/num_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_row="2" />

            <Button
                android:id="@+id/sub"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="3"
                app:layout_row="2" />

            <Button
                android:id="@+id/num_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="3" />

            <Button
                android:id="@+id/num_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/num_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_row="3" />

            <Button
                android:id="@+id/plus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="3"
                app:layout_row="3" />

            <Button
                android:id="@+id/ps"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="+/-"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="4" />

            <Button
                android:id="@+id/num_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="0"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="4" />

            <Button
                android:id="@+id/dot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="."
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_row="4" />

            <Button
                android:id="@+id/result"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:text="="
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="3"
                app:layout_row="4" />
        </GridLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colculator" />

</LinearLayout>